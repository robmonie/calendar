<fieldset class="form-horizontal">
  <legend for="">Appointment Details</legend>
  {{view UserSelectFieldView }}
  {{view AppointmentTypeSelectFieldView }}
  <div class="control-group">
    <label class="control-label">Date and Time</label>
    <div class="controls stacked">
      {{view DateSelectFieldView }}
      {{#if hideTimeslotsSelect}}
        <div class="alert">
          Sorry, there are no appointment times available for this date. <br/>
          Please try selecting a different date.
        </div>
      {{else}}
        {{view TimeslotSelectFieldView }}
        {{{content.booking.errors.timeslot.display}}}
      {{/if}}
      <p class="help-block">The date and time you select will be booked directly into our calendar</p>
    </div>
  </div>

</fieldset>
