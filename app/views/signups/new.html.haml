.page-header
  %h1 Create an account
  .lead It'll only take a minute

- if @signup.errors.any?
  #error_explanation
    %p Please fix the following errors:
    %ul
      - @signup.errors.full_messages.each do |msg|
        %li= msg

= simple_form_for(@signup, :html => { :class => 'form-horizontal' }) do |f|
  %fieldset
    %legend Business details
    = f.input :business_name
  %fieldset
    %legend Your details
    = f.input :first_name
    = f.input :last_name
    = f.input :email
  %fieldset
    %legend Login details
    = f.input :password
    = f.input :password_confirmation
  .form-actions
    = f.submit "Sign up", :class => 'btn btn-primary'
